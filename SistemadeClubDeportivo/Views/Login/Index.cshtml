
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Elegant Login</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            background: url('https://irp.cdn-website.com/09dcdaca/dms3rep/multi/0680b975-d638-4e55-aa12-16e47f4c9551.jpg') no-repeat center center fixed;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #fff; /* Color de texto principal */
        }

        .container {
            background-color: rgba(0, 0, 0, 0.6); /* Fondo semi-transparente */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
            max-width: 1000px;
            width: 100%;
        }

        .login-container {
            background-color: rgba(255, 165, 0, 0.3); /* Fondo semi-transparente de formulario */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        }

            .login-container input {
                margin-bottom: 15px;
                background-color: rgba(255, 255, 255, 0.2); /* Fondo semi-transparente de inputs */
                border: none;
                color: #fff; /* Color de texto de inputs */
                padding: 10px;
                border-radius: 5px;
            }

            .login-container .btn {
                width: 100%;
                background-color: #ff8c00;
                border: none;
                padding: 10px;
                border-radius: 5px;
            }

                .login-container .btn:hover {
                    background-color: #ffa500; /* Color más claro al pasar el mouse */
                }

        .info-container {
            padding: 30px;
        }

            .info-container h2 {
                text-align: center;
                font-weight: bold;
                font-size: 24px;
                text-transform: uppercase;
                margin-bottom: 20px;
            }

            .info-container p {
                margin-bottom: 10px;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="Titulo">
            <h2>Inicio de Sesión</h2>
        </div>
        <div class="row">
            <div class="col-md-6 login-container">
                <form asp-action="Login" asp-controller="Login" method="post">
                    <div class="form-group">
                        <label for="email">Correo Electrónico</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                    </div>
                    @if (TempData["LoginError"] != null)
                    {
                        <div class="alert alert-danger">@TempData["LoginError"]</div>
                    }
                    <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                </form>
            </div>
            <div class="col-md-6 info-container">
                <h2>CLUB MULTIDISCIPLINARIO DEPORTIVO "LEONES"</h2>
                <div class="text-center">
                    <img src="https://blogger.googleusercontent.com/img/b/R29vZ2xl/AVvXsEjLjGGhv4CQS6dBZMK-o09zTp_dja8evaTJmP-44lmirFqmW0g_TuA6W6J1W2DkNz7LVfhaSV4iJnVxcjY8z3qaAjpc-udF971uh10oUQUzC8SgkVud4cz434hHp4eMJ5p6PPvg4QhrR-6U4bSNKd7PeITaCmfo37_DjcA3RvESbzMf97r5Ph2s6KCnOEsU/w284-h282/Club.png" alt="Leones Logo">
                </div>
            </div>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>