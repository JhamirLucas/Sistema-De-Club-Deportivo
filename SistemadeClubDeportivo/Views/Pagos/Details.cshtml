@model SistemadeClubDeportivo.Models.Pago

@{
    ViewData["Title"] = "Details";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recibo Electrónico de Mensualidades</title>
    <style>
        body {
            text-align: center;
            font-family: Arial, sans-serif;
            font-size: small;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            border: 1px solid #ccc;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            background-color: #f9f9f9;
        }

        h1 {
            font-size: 24px;
            margin-bottom: 10px;
            font-size: small;
        }

        h2 {
            font-size: 18px;
            text-align: center;
            margin-bottom: 10px;
        }

        h4 {
            text-align: left;
            font-weight: bold;
            margin-left: 0;
            margin-bottom: 5px;
        }

        table {
            width: 100%;
            margin: 20px auto;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            text-align: center;
            border: 1px solid #ddd;
        }

        small {
            display: block;
            margin-top: 20px;
        }

        #qrcode {
            margin-top: 20px;
            width: 100px;
            height: 100px;
            margin: 0 auto;
        }

        .small-text {
            font-size: 12px; /* Tamaño de fuente más pequeño */
            margin-bottom: 5px; /* Espacio inferior reducido */
        }
    </style>
    <script src="~/js/qrcode.min.js"></script>
</head>
<body onload="window.print();" onafterprint="history.back()">
    <div class="container">
        <h1>RECIBO DE MENSUALIDAD</h1>

        <div style="text-align: left;">
            <h4 style="text-align: center;">
                Nro De Recibo: @Html.DisplayFor(model => model.NroRecibo)
            </h4>

        </div>

        <hr />

        <div>
            <p><span class="small-text"><strong>Nombre del Cliente:</strong>@Html.DisplayFor(model => model.Cliente!.Nombre)</span></p>

            <hr />

            <table>
                <tr>
                    <th><span ="small-text">Fecha de Registro</span></th>
                </tr>
                <tr>
                    <td>@Html.DisplayFor(model => model.Cliente!.FechaDeRegistro)</td>
                </tr>
            </table>

            <hr />

            <h2>Fecha de Pago</h2>
            <table>
                <tr>
                    <th>Dia</th>
                    <th>Mes</th>
                    <th>Año</th>
                    <th>Total Bs.</th>
                </tr>
                <tr>
                    <td>@Html.DisplayFor(model => model.Dia)</td>
                    <td>@Html.DisplayFor(model => model.Mes)</td>
                    <td>@Html.DisplayFor(model => model.Anio)</td>
                    <td>@Html.DisplayFor(model => model.Total)</td>
                </tr>
            </table>

            <div id="qrcode"></div>
        </div>

        <small>Email: @Html.DisplayFor(model => model.Usuario!.Email)</small>
    </div>
    <hr />
    @{
        string codigoQR = String.Format("{0}|{1}|{2}|{3}|{4}|{5}|{6}",
        Model.NroRecibo,
        Model.Dia,
        Model.Mes,
        Model.Anio,
        Model.Total,
        Model.Usuario!.Nombre,
        Model.Cliente!.Nombre
        );
    }

    <script>
        var qrcode = new QRCode("qrcode", {
            text: "@codigoQR",
            width: 100,
            height: 100
        });
    </script>
</body>
</html>
